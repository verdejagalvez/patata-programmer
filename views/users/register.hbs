<form action="/register" method="post">
<div class="card border-warning m-2 shadow p-1 bg-white rounded custom-width-register mx-auto mt-4">
  <div class="text-center">
    <div class="list-inline-item"><h2>REGISTER</h2></div>
  </div>
</div>

  <div class="container">
    <div class="row">
    <div class="col">   
    <div class="row justify-content-center m-3">
        <div class="col-md-5">
          <div class="mb-3">
            <label class="form-label fs-6">Name</label>
            <input name="name" type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" aria-label="Name" value="{{ user.name }}">
            {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}} 
          </div>

          <div class="mb-3">
            <label class="form-label fs-6">Username</label>
            <input name="username" type="text" class="form-control {{#if errors.username}}is-invalid{{/if}}" aria-label="userName" value="{{ user.name }}">
            {{#if errors.username}}<div class="invalid-feedback">{{ errors.username }}</div>{{/if}}
          </div>

          <div class="mb-3">
            <label class="form-label fs-6">Email address</label>
            <input name="email" type="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" aria-label="email" value="{{ user.email }}">
            {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
          </div>

          <div class="mb-3">
            <label class="form-label fs-6">Password</label>
            <input name="password" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" aria-label="password" value="{{ user.password }}">
            {{#if errors.password}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
          </div>

          <div class="mb-3">        
          <button type="submit" class="btn btn-outline-secondary">Register</button>
          <button class="btn btn-outline-secondary" type="button" onclick="window.location.href = '/'">Back</button>
          <label class="form-label ml-3"><small>Â¿Ya eres miembro?</label></small>    
          <button class="btn m-1 sm btn-outline-secondary" type="button" onclick="window.location.href = '/login'">login</button>
          </div>
    </div>  
  </div>
</form>