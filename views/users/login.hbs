<form action="/login" method="post">
  {{#if info}}<div class="alert alert-primary" role="alert">{{ info }}</div> {{/if}}
  <div class="text-center card border-warning shadow bg-white rounded custom-width-card mt-4 mb-3">
      <div class="list-inline-item m-2 mr-2 p-1"><h4>Login</h4></div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">   
        <div class="row justify-content-center m-3">
          <div class="col-md-5">
            <div class="mb-2 mt-3">
              <label class="form-label">UserName</label>
              <input type="username" name="username" class="form-control {{#if errors.username}}is-invalid{{/if}}" aria-label="name" value="{{ user.username }}">
              {{#if errors.username}}<div class="invalid-feedback">{{ errors.username }}</div>{{/if}}
            </div>

            <div class="mb-4 mt-3 mb-5">
              <label class="form-label">Password</label>
              <input type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" aria-label="password">
              {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
            </div>

            <div class="mb-3 mt-3">        
              <button type="submit" class="btn btn-outline-secondary">Login</button>
              <button class="btn btn-outline-secondary" type="button" onclick="window.location.href = '/'">Back</button>
              <label class="form-label custom-margin-left-button-login mb-5"><small>You have not yet registered?</small></label>
              <button class="btn btn-outline-secondary mb-2" type="button" onclick="window.location.href = '/register'">Register</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>