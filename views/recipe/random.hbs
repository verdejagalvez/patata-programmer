<div class="card border-warning m-2 shadow p-1 bg-white rounded custom-width-register mx-auto mt-4">
  <div class="text-center">
    <h3><i class="fas fa-utensils mr-2 p-1 list-inline-item"></i></h3>
    <div class="list-inline-item"><h2>Recipe Random</h2></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="card border-warning shadow mt-2 bg-white rounded">
        <div class="card-body mt-1">
          <div class="row">
            <div class="col">
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <img class="mb-1 rounded-circle" src="{{ avatarUrl }}" alt="" width="55" />
              <h4>@{{ username }}</h4>
              <img src="{{ recipe.image }}" class="mt-3 card-img-top image-random mb-2" alt="Recipe Image" style="width: 350px; height: 300px;"/>
              
            </div>
            <div class="col-md-8">
              <h4>{{ recipe.title }}</h4>
               <p><small>{{ elapsedTime createdAt }}</small></p>
              <p class="card-text">{{ recipe.description }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>