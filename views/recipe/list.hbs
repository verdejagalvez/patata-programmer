<div class="container">
  <div id="carouselExampleCaptions" class="carousel slide m-5" data-bs-ride="carousel"data-bs-interval="3000">
    <ol class="carousel-indicators">
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></li>
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></li>
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></li>
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/monalisa.jpg" class="d-block w-100" alt="">
        <div class="carousel-caption d-none d-md-block">
          
        </div>
      </div>
      <div class="carousel-item">
        <img src="/redscarlett.jpg" class="d-block w-100" alt="Image 2">
        <div class="carousel-caption d-none d-md-block">
          
        </div>
      </div>
      <div class="carousel-item">
        <img src="/grenailles.jpg" class="d-block w-100" alt="Image 3">
        <div class="carousel-caption d-none d-md-block">
          
        </div>
      </div>
      <div class="carousel-item">
        <img src="/gallega.jpg" class="d-block w-100" alt="Image 4">
        <div class="carousel-caption d-none d-md-block">
          
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon " aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </a>
  </div>

  <div class="card-title text-center">
    <h1 i class="fas fa-utensils mr-3 p-3"> Recetas Patateras </h1></i>
  </div>

    <div class="row row-cols-3 row-cols-lg-5">
   {{#each recipes as |recipe| }}

    <div class="card" style="width: 80rem;">
      <img src="" class="card-img-top" alt="recipe-image">
      <div class="card-body">
        <img class="rounded-circle" src="{{ recipe.user.avatarUrl }}" alt="{{ recipe.user.username }}" width="25">
        {{ recipe.user.username }}
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">{{ recipe.description }}</li>
        <li class="list-group-item">{{ elapsedTime recipe.createdAt }}</li>
      </ul>
      <div class="card-body">
        <a href="/book" class="card-link">Recipe</a>
      </div>
    </div>
  <hr>
{{/each}}
  </div>