{{#if info}}<div class="alert alert-primary" role="alert">{{ info }}</div> {{/if}}
<div class="text-center card border-warning m-3 shadow mb-5 bg-white rounded custom-width-profile mx-auto mt-5">
    <h3><i class="fas fa-utensils mt-2 mr-2 p-1 list-inline-item"></i></h3>
    <div class="list-inline-item mr-2 p-1"><h4>Login</h4></div>
  </div>
</div>
<form action="/login" method="post">
  <div class="container">
    <div class="row">
    <div class="col">   
      <div class="row justify-content-center">
          <div class="col-md-5">
            <div class="mb-2">
              <label class="form-label">UserName</label>
              <input type="username" name="username" class="form-control {{#if errors.username}}is-invalid{{/if}}" aria-label="name" value="{{ user.username }}">
              {{#if errors.username}}<div class="invalid-feedback">{{ errors.username }}</div>{{/if}}
            </div>

            <div class="mb-4">
              <label class="form-label">Password</label>
              <input type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" aria-label="password">
              {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
            </div>

            <div class="mb-3">
              <button type="submit" class="btn btn-outline-secondary">Login</button>
              <button class="btn btn-outline-secondary " type="button" onclick="window.location.href = '/'">Back</button>
              <label class="form-label ml-3"><small>Â¿No te has registrado?</label></small>    
              <button class="btn m-1 sm btn-outline-secondary" type="button" onclick="window.location.href = '/register'">Register</button>
            </div>
    </div>
  </div>
</form>