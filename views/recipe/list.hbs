<div class="container-list">
  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    <ol class="carousel-indicators d-none">
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></li>
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></li>
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></li>
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/monalisa.jpg" class="d-block w-100 img-fixed-height">
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
      <div class="carousel-item">
        <img src="/redscarlett.jpg" class="d-block w-100 img-fixed-height" >
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
      <div class="carousel-item">
        <img src="/grenailles.jpg" class="d-block w-100 img-fixed-height">
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
      <div class="carousel-item">
        <img src="/gallega.jpg" class="d-block w-100 img-fixed-height">
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon " aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </a>
  </div>
</div>

<div class="card custom-width-card-home border-warning shadow bg-white rounded">
  <div class="text-center">
    <h3><i class="fas fa-utensils mr-2 p-1 list-inline-item"></i></h3>
    <div class="list-inline-item mr-2 p-1 "><h2>Latests recipes</h2></div>
  </div>
</div>

<div class="container-list">
  <div class="row row-cols-1 row-cols-md-3">
    {{#each recipes as |recipe| }}
      <div class="col-4 ">
        <div class="card recipe-card-list-home h-100 border-warning shadow bg-white rounded">
          <div class="custom-centered-image">
            <img src="{{recipe.image}}" class="card-img-top recipe-card-list-home" alt="Recipe Image"/>
          </div>
          <div class="row">
              <div class="col">
              <h5 class="ms-3 mt-3 mb-3 h4"> {{ recipe.title }}</h5>
                <div clas="d-flex aling-items-center">
                  <img class="rounded-circle ms-3" src="{{ user.avatarUrl }}" alt="{{ user.avatarUrl }}" width="55"></img>
                  <span class="ms-3 mt-3 h5">@{{ recipe.user.username }}</span>
                </div>
            </div>
          </div>
          <div class="card-body">
            <p><strong><small>{{ elapsedTime recipe.createdAt }}</small></strong></p>
            {{#if ../currentUser}} 
              <a href="/book" class="btn btn-outline-success btn-sm" aria-disabled="true">More Recipes {{currentUser.name}}</a>
            {{else}} 
              <a href="/register" class="btn btn-outline-success btn-sm">More Recipes</a>
            {{/if}} 
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>