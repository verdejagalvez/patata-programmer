<div class="container pt-5">
  <div id="carouselExampleCaptions" class="carousel slide m-5" data-bs-ride="carousel" data-bs-interval="3000">
    <ol class="carousel-indicators mt-5">
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></li>
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></li>
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></li>
      <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3"></li>
    </ol>
    <div class="carousel-inner m-5">
      <div class="carousel-item active">
        <img src="/monalisa.jpg" class="d-block w-100" alt="">
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
      <div class="carousel-item">
        <img src="/redscarlett.jpg" class="d-block w-100" alt="Image 2">
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
      <div class="carousel-item">
        <img src="/grenailles.jpg" class="d-block w-100" alt="Image 3">
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
      <div class="carousel-item">
        <img src="/gallega.jpg" class="d-block w-100" alt="Image 4">
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon " aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </a>
  </div>
</div>

<div class="text-center m-5">
  <i class="fas fa-utensils mr-3 p-3 list-inline-item display-1"></i>
  <div class="list-inline-item display-1">Recetas Patateras</div>
</div>

<div class="container">
  <div class="row">
    {{#each recipes as |recipe| }}
      <div class="col-4 mb-4">
        <div class="card m-4">
         <img src="{{recipe.image}}" class="card-img-top custom-centered-image" alt="Recipe Image" width="180" height="280" />
          <img class="rounded ms-3 mt-3" src="{{ user.avatarUrl }}" alt="{{ user.username }}" width="55" />
          <div class="card-body">
            <h4 class="card-title">{{ recipe.user.username }}</h4>
            <p class="card-text">{{ recipe.description }}</p>
            <p><strong>{{ elapsedTime recipe.createdAt }}</strong></p>
            {{#if ../currentUser}} 
              <a href="/book" class="btn btn-outline-success btn-sm" aria-disabled="true">More Recipes {{currentUser.name}}</a>
            {{else}} 
              <a href="/register" class="btn btn-outline-success btn-sm">More Recipes</a>
            {{/if}} 
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>