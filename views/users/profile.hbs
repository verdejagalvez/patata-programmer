<form action="/profile" method="post" enctype="multipart/form-data"> 
  <div class="container mt-2">
    <div class="row m-2">
      <div class="col-md-6 d-flex align-items-center">
        <img class="rounded-circle me-3 mt-3" src="{{user.avatarUrl}}" alt="{{user.name}}" width="80" />
        <h3 class="mt-3">Create a recipe!</h3>
      </div>
    </div>
    
    <div class="row ">
      <div class="col-lg-15 mb-2">
        <div class="form-floating mt-3 mb-2">
          <input class="form-control" name="title" placeholder="Create a title" id="floatingTextarea1">
          <label for="floatingTextarea1">Title</label>
        </div> 
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-15 mb-2">
        <div class="form-floating mb-2">
          <label for="floatingInputGrid">Write the steps of the recipe</label>
          <input class="form-control" name="description" id="floatingTextarea1" placeholder="Leave your description here" style="width: 100%; height: 200px;">
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <div class="form-group mb-4">
          <label for="floatingInputGrid" class="m-2 same-width">Time to cook</label>
          <input class="form-control" name="time" id="floatingInputGrid" placeholder="time">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="floatingSelectGrid" class="m-2 same-width">Choose your potato</label>
          <select name="potato" class="form-select" id="floatingSelectGrid">
            {{#each potatoes as |potato|}}
              <option value="{{potato._id}}">{{potato.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>  
    
    <div class="row">
      <div class="col-lg-15 mb-2">
        <div class="form-group mb-3">
          <div class="input-group">
            <input type="file" class="form-control" name="image" id="inputGroupFile02">
            <label class="input-group-text" for="inputGroupFile02">Upload</label>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col">
        <div class="container">
          <button type="submit" class="btn btn-outline-secondary mb-5">Publish</button>
        </div>
      </div>
    </div>
  </div>
</form>
 <div class="text-center card border-warning m-3 shadow mb-3 bg-white rounded custom-width-profile mx-auto">
    <h3><i class="fas fa-utensils mt-2 mr-2 p-1 list-inline-item"></i></h3>
    <div class="list-inline-item mr-2 p-1 "><h4>Recipe of {{user.username}}!</h4></div>
  </div>


{{#each user.recipes as |recipe| }}
  <div class="container center">
    <div class="row">
      <div class="col m-3">
        <div class="card border-warning shadow mt-2 bg-white rounded">
          <div class="card-body mt-2">
            <img src="{{recipe.image}}" class="card-img-top custom-centered-image mb-2" alt="Recipe Image" />
            <h4> {{ recipe.title }}</h4>
            <img class="rounded-circle" src="{{ user.avatarUrl }}" alt="{{ user.username }}" width="35" />
            <h4> {{ user.username }}</h4>
            <p class="card-text">{{ recipe.description }}</p>
            <p><strong>{{ elapsedTime recipe.createdAt }}</strong></p>
            <a href="/" class="btn btn-outline-success btn-sm">Delete Recipe</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}

